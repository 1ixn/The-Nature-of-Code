{
   "title":"The Nature of Code",
   "destination":"build/:build",
   "files":[
      "chapters/01_vectors.html"
   ],
   "addPlugins":[
     "magicbook-codesplit",
     "magicbook-katex"
   ],
   "builds":[
        {
            "format":"pdf",
            "prince" : {
                "log":"errors.txt",
                "timeout" : 300000
            },
            "layout":"layouts/pdf.html",
            "stylesheets":{
                "files": [ "stylesheets/pdf.scss" ]
            },
            "images" : {
                "files" : "noc_pdf/imgs/**/*.*"
            },
            "fonts" : {
                "destination" : "assets/fonts/"
            }
        },
        {
            "format":"html",
            "layout":"layouts/html.html",
            "stylesheets":{
                "files": [ "stylesheets/pdf.scss" ]
            },
            "images" : {
                "files" : "noc_html/imgs/**/*.*"
            },
            "fonts" : {
                "destination" : "assets/fonts/"
            }
        }
   ]
}
